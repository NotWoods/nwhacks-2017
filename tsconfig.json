{
	"compilerOptions": {
		"allowJs": true,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"suppressImplicitAnyIndexErrors": true,
		"sourceMap": true,

		"target": "es5",
		"lib": [
			"es2016", "es2017.object",
			"dom", "dom.iterable"
		],
		"module": "commonjs",
		"moduleResolution": "node",

		"outDir": "out"
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
